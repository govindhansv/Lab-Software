<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
    <title>Error Page</title>
</head>

<body>
    <section class="hero is-fullheight is-danger is-bold">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title"> {{message}}</h1>
                <h2 class="subtitle"> {{error.status}} </h2>
                <a href="/" id="current-page-button" class="m-4 button is-light"> Ask Help </a>
                <pre class="container">{{error.stack}}</pre>
            </div>
        </div>
    </section>
</body>

</html>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Get the current page URI
      const currentPageURI = window.location.href;

      // Set the current page URI as the href attribute of the button
      const button = document.getElementById("current-page-button");
      button.href = '/error/?url=' + currentPageURI;
    });
  </script>