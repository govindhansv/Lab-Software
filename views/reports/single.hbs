<div class="section">
    <div class="container">
        <div class="card">
            <div class="card-image">
                <figure class="image 16by9">
                    <img src={{data.report}} alt="Placeholder image">
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <figure class="image is-48x48">
                            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="media-content">
                        <p class="title is-4"> {{data.test}} </p>
                        <p class="subtitle is-6"> {{data.name}} </p>
                    </div>
                </div>

                <div class="content">
                    {{data.description}}
                    <a>@bulmaio</a>.
                    <a href="#">#css</a> <a href="#">#responsive</a>
                    <br>
                    <time datetime="2016-1-1"> {{data.createdAt}} </time>
                </div>
            </div>
            
            <footer class="card-footer">
                <a href="/reports/edit/{{data._id}}" class="card-footer-item">Edit</a>
                <a href="/reports/delete/{{data._id}}" class="card-footer-item">Delete</a>
                <a href="/reports/" class="card-footer-item">Close</a>
            </footer>
        </div>
    </div>
</div>